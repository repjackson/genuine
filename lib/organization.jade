template(name='organizations')
    .ui.stackable.padded.grid 
        .four.wide.column
            .ui.inline.header 
                +i name='organization'
                |organizations
            if currentUser
                .ui.icon.button.add_organization
                    i.plus.large.icon
            +facet key='tag' model='organization'
            +search_input key='title'
        .twelve.wide.column
            +session_set key='view_mode' value='grid' icon='th'
            +session_set key='view_mode' value='list' icon='list'
            i.large.sort.icon
            +session_set key='sort_key' value='_timestamp' label='added' icon='clock'
            +session_set key='sort_key' value='points' label='points' icon='hashtag'
            .scrollin
                // if subs_ready
                .ui.centered.stackable.fluid.cards
                    each model_docs 'organization' 
                        +organization_card
                // else 
                //     i.massive.yin.yang.loading.icon



template(name='organization_card')
    .ui.link.card.view_org.pointer.fly_right
        img.ui.rounded.image(src="{{c.url image_id height=200 width=400 gravity='face' crop='fill'}}" class=currentUser.invert_class)
        .content
            a.ui.header.zoomer(href="/organization/#{_id}") #{title}
            // .ui.small.grey.inline.header #{when}
            .smallscroll
                | !{content}
            // +comments_view_small
            // +author_info
            if group_id     
                +group_info
            
        
template(name='organization_item')
    .ui.fluid.segment.view_org.pointer
        a.ui.header(href="/organization/#{_id}/view") #{title}
        div
        .ui.small.grey.inline.header #{when}
        | #{content}
        each tags 
            .ui.basic.small.label #{this}
        

template(name='organization_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .four.wide.column.scrolling
                    a.ui.circular.icon.button(href="/organizations" title='orgs')
                        i.chevron.left.icon
                        +i name='organization'
                        |organizations
                    .ui.inline.grey.header {{from_now start_datetime}}
                    if can_edit
                        a.ui.circular.icon.button.fly_down(href="/organization/#{_id}/edit" title='edit')
                            +i name='pencil'
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    +array_view key='tags' label='tags' direct=true
                    +voting_full
                    +array_view key='location_tags' label='location_tags' direct=true
                .nine.wide.column.scrolling
                    .ui.header #{title}
                    img.ui.rounded.image(src="{{c.url image_id }}" class=currentUser.invert_class)
                    // a.ui.header(href="/user/#{target.username}")
                    //     |#{target.username}
                    |!{content}
                    if watson 
                        +watson_view
                    div 
                    .spacer
                    .spacer
                    +comments
                .three.wide.column
                    +fans
                // .four.wide.column
                
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit


template(name='organization_edit')
    with current_doc
        .ui.stackable.padded.grid
            .three.column.row 
                .column.scrolling
                    .ui.inline.header 
                        +icolor name='news' cl='ui image inline pointer'
                        |edit org
                    a.ui.icon.green.big.button.fly_up(href="/organization/#{_id}" title='save')
                        i.checkmark.big.icon
                    +text_edit key='title' label='title' direct=true
                    +html_edit key='content' label='content' direct=true
                    +call_watson key='content'

                .column.scrolling
                    i.large.link.red.remove.icon.delete_org
                    if is_dev
                        +single_user_edit key='_author_id' label='author' direct=true
                    else 
                        .ui.header 
                            small author
                            |#{_author.username}
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true icon='tags'
                    +boolean_edit key='published' icon='visible' direct=true
                    if is_dev 
                        +text_edit key='model' label='model' direct=true
                .column.scrolling
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                    unless published
                        a.ui.fluid.green.button.submit
                            i.checkmark.icon
                            |publish
                    else
                        .ui.basic.button.unpublish 
                            |unpublish
                    .ui.header
                        |audience
                    +boolean_edit key='private' label='private' 
                    if private 
                        +multi_user_edit key='access_user_ids' label='user picker' direct=true
                    +group_picker